@article{vanDijkMillenniumDroughtsoutheast2013,
  title = {The {{Millennium Drought}} in Southeast {{Australia}} (2001\textendash{}2009): {{Natural}} and Human Causes and Implications for Water Resources, Ecosystems, Economy, and Society},
