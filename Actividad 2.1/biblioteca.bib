  pages = {267--283},
  file = {/Users/aldotapia/Zotero/storage/G27XATT3/Keller - 2005 - Deficit Irrigation and Vine Mineral Nutrition.pdf;/Users/aldotapia/Zotero/storage/B9UJGSTP/Keller - 2005 - Deficit Irrigation and Vine Mineral Nutrition.html}
