  pages = {111--123},
  file = {/Users/aldotapia/Zotero/storage/VQANI6WG/Li et al. - 2014 - Improving estimation of summer maize nitrogen stat.pdf;/Users/aldotapia/Zotero/storage/CVRJ9PF4/S0378429013004322.html}
