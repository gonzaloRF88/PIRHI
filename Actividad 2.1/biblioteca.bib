@article{MahmoudHydrologicalResponseLand2015,
  title = {Hydrological {{Response}} to {{Land Cover Changes}} and {{Human Activities}} in {{Arid Regions Using}} a {{Geographic Information System}} and {{Remote Sensing}}},
