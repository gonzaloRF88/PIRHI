  author = {Li, Fei and Miao, Yuxin and Feng, Guohui and Yuan, Fei and Yue, Shanchao and Gao, Xiaowei and Liu, Yuqing and Liu, Bin and Ustin, Susan L. and Chen, Xinping},
  month = feb,
